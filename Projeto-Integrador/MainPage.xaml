<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="Projeto_Integrador.MainPage"
             Title="HOME"
             BackgroundColor="Black">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
            <GradientStop Color="#e0d6fa" Offset="0.1"/>
            <GradientStop Color="HotPink" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Bem vindo." FontSize="45" FontAttributes="Bold"
                       Margin="40,40,0,0"/>

                
            </StackLayout>

            <StackLayout Grid.Row="1">
                <Label Text="Acesse a aba 'SERVIDORES' para instalação e configuração
                       de serviços e servidores."
                       FontSize="20" Margin="40,40,10,10"/>

                <Label Text="Acesse a aba 'TERMINAIS' para comandos de terminais linux, 
                       powershell e conceitos básicos de shell script. "
                       FontSize="20"  Margin="40,0,10,10"/>
            </StackLayout>

            <StackLayout Grid.Row="2">
                <Button/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>