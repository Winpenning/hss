<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto_Integrador.pages.Sistema"
             Title="SISTEMA">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
            <GradientStop Color="#FF66C4" Offset="0.1"/>
            <GradientStop Color="#5170FF" Offset="0.6"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0">
                <Label Text="Linux" TextTransform="Uppercase" TextColor="White" FontSize="38" FontAttributes="Bold" Margin="10,10,10,10"/>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <Button HeightRequest="150" WidthRequest="70" Margin="50,10" BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#252525,Default=#f0f0f0}" CornerRadius="20" Clicked="botao_rede"
                        Text="REDE" FontSize="20" FontAttributes="Bold" BorderWidth="1" BorderColor="{AppThemeBinding Light=#252525, Dark=#f5bed3,Default=#252525}" 
                        TextColor="{AppThemeBinding Light=#252525, Dark=#f0f0f0,Default=#252525}"/>
            </StackLayout>
            <StackLayout Grid.Row="2">
                <Button HeightRequest="150" WidthRequest="70" Margin="50,10" BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#252525,Default=#f0f0f0}" CornerRadius="20" Clicked="botao_usuario"
                        Text="USUÁRIOS E GRUPOS" FontSize="20" FontAttributes="Bold" BorderWidth="1" BorderColor="{AppThemeBinding Light=#252525, Dark=#f5bed3,Default=#252525}" 
                        TextColor="{AppThemeBinding Light=#252525, Dark=#f0f0f0,Default=#252525}"/>
            </StackLayout>
            <StackLayout Grid.Row="3">
                <Button HeightRequest="150" WidthRequest="70" Margin="50,10" BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#252525,Default=#f0f0f0}" CornerRadius="20" Clicked="botao_diretorios"
                        Text="DIRETÓRIOS" FontSize="20" FontAttributes="Bold" BorderWidth="1" BorderColor="{AppThemeBinding Light=#252525, Dark=#f5bed3,Default=#252525}" 
                        TextColor="{AppThemeBinding Light=#252525, Dark=#f0f0f0,Default=#252525}"/>
            </StackLayout>
            <StackLayout Grid.Row="4">
                <Button HeightRequest="150" WidthRequest="70" Margin="50,10" BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#252525,Default=#f0f0f0}" CornerRadius="20" Clicked="botao_terminaleSistema"
                        Text="TERMINAL E SISTEMA" FontSize="20" FontAttributes="Bold" BorderWidth="1" BorderColor="{AppThemeBinding Light=#252525, Dark=#f5bed3,Default=#252525}" 
                        TextColor="{AppThemeBinding Light=#252525, Dark=#f0f0f0,Default=#252525}"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>