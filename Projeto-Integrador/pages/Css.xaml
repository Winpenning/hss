<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto_Integrador.pages.Css"
             Title="CSR"
             BackgroundColor="#DFDFDF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame BackgroundColor="#D78DE4" Grid.Row="0">
            <Label Text="CSR" 
                   TextColor="White" FontAttributes="Bold" FontSize="30"
                   Margin="20,80,0,0"/> 
        </Frame>
        <StackLayout Grid.Row="1">
            <Button Text="Terminal" Clicked="botao_terminal"
                HeightRequest="150" WidthRequest="70" Margin="50,10" 
                BackgroundColor="White" CornerRadius="20"/>
            
            <Button Text="Power Shell" Clicked="botao_power"
                HeightRequest="150" WidthRequest="70" Margin="50,10"
                BackgroundColor="White" CornerRadius="20"/>
            
            <Button Text="Shell Script" Clicked="botao_shellscript"
                HeightRequest="150" WidthRequest="70" Margin="50,10"
               BackgroundColor="White" CornerRadius="20"/>
        </StackLayout>

    </Grid>
</ContentPage>